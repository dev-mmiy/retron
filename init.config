# Retron OS init.config
# カーネル起動時に自動実行されるプログラムの設定ファイル

# 基本設定
[system]
default_shell = "terminal"
auto_start = true
debug_mode = false
verbose_output = true

# プログラム設定
[programs]
# プログラム名 = 有効/無効, 優先度, タイプ, 説明
terminal = true, 100, terminal, "Interactive terminal"
shell = true, 95, shell, "Command shell"
filesystem = true, 90, service, "File system service"
sysinfo = true, 80, application, "System information"
filemanager = true, 70, application, "File manager"
logging = true, 85, service, "Logging service"

# 起動シーケンス
[startup]
# 起動順序でプログラムをリスト（WSL/Qemu環境用）
1 = "logging"
2 = "filesystem"
3 = "terminal"
4 = "shell"
5 = "sysinfo"
6 = "filemanager"

# 環境変数
[environment]
PATH = "/bin:/usr/bin:/usr/local/bin:/sbin"
HOME = "/home"
USER = "root"
SHELL = "/bin/terminal"
PWD = "/"
TERM = "xterm-256color"
DISPLAY = ":0"

# ログ設定
[logging]
log_level = "info"
log_file = "/var/log/retron.log"
console_output = true
rotate_size = "10MB"
max_files = 5

# ファイルシステム設定
[filesystem]
mount_point = "/"
fs_type = "ext4"
auto_mount = true
check_fs = true

